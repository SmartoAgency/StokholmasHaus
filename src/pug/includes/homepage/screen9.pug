    var apartments = [
        {
            name: "apartment-button",
            title: "Stokholmas 26",
            mobileTitle: "26",
            mobileClass: "button-item__mobile",
            value: "stokholmas-26",
            id: "stokholmas-26__1",
            img: './assets/images/home/home-page-screen9.jpg',
        },
        {
            name: "apartment-button",
            title: "Stokholmas 26 c",
            value: "stokholmas-26-c",
            mobileTitle: "26 c",
            mobileClass: 'button-item__mobile',
            id: "stokholmas-26_c__2",
            img: './assets/images/home/flat-1.jpg',
        },
        {
            name: "apartment-button",
            title: "Stokholmas 26 A",
